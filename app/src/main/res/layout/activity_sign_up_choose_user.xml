<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images8"
    tools:context=".ChooseUser">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="10dp">


        <Button
            android:id="@+id/btnOrganizer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/my_button_bg2"
            android:drawableTop="@drawable/ic_person_black_100dp"
            android:text="Customer"
            android:textColor="@android:color/black" />


        <Button
            android:id="@+id/btnPlanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawableTop="@drawable/ic_person_black_100dp"
            android:text="Vendor"
            android:background="@drawable/my_button_bg2"
            android:textColor="@android:color/black">

        </Button>

    </LinearLayout>

</RelativeLayout>